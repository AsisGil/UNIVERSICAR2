<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borde_tarjeta"
        android:elevation="18dp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rltarjetamensaje"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"

                android:foreground="?attr/selectableItemBackground"
                android:minHeight="?android:attr/listPreferredItemHeight">

                <TextView
                    android:id="@+id/txtfecha"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:fontFamily="casual"
                    android:text="TextView"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:text="TextView"
                    android:layout_alignBaseline="@+id/txtasunto"
                    android:layout_alignBottom="@+id/txtasunto"
                    android:layout_alignEnd="@+id/fableido" />

                <TextView
                    android:id="@+id/txtasunto"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="11dp"
                    android:layout_toStartOf="@+id/txtfecha"
                    android:fontFamily="casual"
                    android:text="TextView"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/linea"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentBottom="true"

                    android:layout_alignParentStart="true"

                    android:background="@color/marron">

                </View>

                <TextView
                    android:id="@+id/txtdestinoo"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="casual"
                    android:text="TextView"
                    android:textSize="15dp"
                    android:layout_alignTop="@+id/txtfecha"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/txttexto"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtdestinoo"
                    android:fontFamily="casual"
                    android:text="TextView"
                    android:textSize="15dp" />



                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fableido"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    card_view:backgroundTint="@color/color_red"
                    card_view:fabSize="mini"
                    card_view:srcCompat="@color/color_red"
                    android:layout_marginLeft="3dp"
                    android:layout_alignBottom="@+id/txttexto"
                    android:layout_alignEnd="@+id/linea" />




            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>